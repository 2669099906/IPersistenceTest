    <select id="findAll" resultType="com.zxr.pojo.User">
        select * from user
    </select>

    <update id="updateById" parameterType="com.zxr.pojo.User">
        update user set(username = #{username}) where id=#{id}
    </update>

    <delete id="deleteById" parameterType="com.zxr.pojo.User">
        delete from user where id=#{id}
    </delete>

    <insert id="insert" parameterType="com.zxr.pojo.User">
        insert into user values(#{id}, #{username})
    </insert>

</mapper>
